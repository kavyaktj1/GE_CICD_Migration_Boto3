pipeline {
    agent any
	parameters {
        string(description: '', name:'Workspace_Path', defaultValue: "")
		string(description: '', name:'PR_ID', defaultValue: "")
	}
    options {
      disableConcurrentBuilds()
      timeout(time: 1, unit: 'HOURS')
      ansiColor('xterm')
      buildDiscarder(logRotator(numToKeepStr: '10'))
    }

    stages {
        stage("AWS Crawler Run") {
          steps {
                  sh """
					cd Scripts/Crawler
                    python3 crawler_metadata_prod.py "${Workspace_Path}"
					python3 crawler_prod_create.py "${Workspace_Path}"
                    """
		    
             }
	      
		}
	}
	post {
        always
		{
			script{
				sh 'cat ${JENKINS_HOME}/jobs/${JOB_NAME}/builds/${BUILD_NUMBER}/log > console_log.log'
				sh 'python3 Scripts/publish_cw_logs.py "AWS-Crawler" "${PR_ID}"'
			}
		}
    }
}